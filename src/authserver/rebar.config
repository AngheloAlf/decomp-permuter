{erl_opts, [debug_info]}.
{deps, [
        {cowboy, "2.6.0"},
        {enacl, "1.1.0"}
        % {cowboy, {git, "https://github.com/ninenines/cowboy", {tag, "2.6.0"}}},
        % {enacl, {git, "https://github.com/jlouis/enacl", {tag, "1.1.0"}}}
       ]
}.

{relx, [{release, {authserver, "0.1.0"},
         [authserver,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.

{erlfmt, [
    write,
    {files, "{src,include,test}/*.{hrl,erl}"}
]}.

{plugins, [rebar3_run, rebar3_hex, erlfmt]}.